     function resetPostText()
	{
 		if($("textarea#post-box").val == "")
					$("textarea#post-box").val("Post something...");
	}
	
	function clearPostText()
	{
	        	$("textarea#post-box").val("");
	}
	
	function clearCommentText(callingelement)
	{
	        	$(callingelement).val("");
	}

	
	</script>
  <%= csrf_meta_tag %>
</head>

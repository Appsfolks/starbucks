
<div id='signup_form'>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id='inneralign'>
  <div class="field">
    <%= f.label :name, 'Name:', :class=>'label' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, 'Email Address:',:class=>'label' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, 'Password:',:class=>'label' %><br />
    <%= f.password_field :password %>
  </div>
<div class="field">
    <%= f.label :password_confirmation, ' Confirm Password:',:class=>'label' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
	<div id="signup-button">
		<button class="blue-pill"> <% if params[:action] == 'edit' %> Update <%else%> Sign Up <%end%> </button>
   </div>
	
</div>
<% end %>
</div>
